<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <div class="row" style="height: 300px; background-image: linear-gradient(to top, grey , silver);">
            <center><%= gravatar_for @user %> <br>
            <%= @user.username %></center>
        </div>

        <div class="row" style="background-color: silver;">
            <div class="col-md-10 col-md-offset-1">
                <a href="/shoppingbag/index"> <h4><span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                Pending orders </h4> </a>
                <a href="/users/update"> <h4><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Update login details </h4> </a>
                <a href="#"> <h4><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                Subscription </h4> </a>
                <%= link_to "/logout", method: :delete do %> <h4><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                Logout </h4> <% end %>
                <br>

                <% if @authorized %>
                    <a href="/admin"> <h4><span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                    ADMIN DASHBOARD </h4> </a>
                <% end %>
                <br><br>
            </div>
        </div>
        <br><br>
    </div>
</div>
