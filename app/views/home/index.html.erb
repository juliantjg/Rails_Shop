<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <center> <h3> Home </h3> </center>
        <div class="row" style="height: 450px; background-image: linear-gradient(to top, grey , silver);">
            
        </div>
        <div class="row">
            <div class="col-md-3">
                <h4> <%= @randomItem.name %> </h4>
                <%= @randomItem.description %>
                <br>
                Price: $<%= @randomItem.price %>  
                <br>
            </div>
            <div class="col-md-9">
                <br>
                 <form action="/save" method="POST">
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                    <input type="hidden" value="<%= @randomItem.id %>" name="itemId">
                    <input type="hidden" value="/home" name="location">
                    <button type="submit" class="btn btn-success">Save Item</button>
                </form>
            </div>
        </div>
        <br><br>
        <hr>
        <div>
            <br>
            <div class="row">
                <div class="col-md-9">
                    <h2> Popular Items </h2>
                </div>
                <div class="col-md-3">
                    <%= link_to "collection/all" do %>
                        <h4> See all + </h4>
                    <% end %>
                </div>
            </div>
            <br>
            <div class="row">
                <% @popularItems.each do |item| %>
                    <div class="col-md-4">
                        <a href="/item/<%= item.id %>">
                           
                                <div style="height: 200px; background-color: silver;">
                                    
                                    
                                </div>
                                
                            
                        </a>
                        <h4> <%= item.name %>  </h4>
                        <form action="/save" method="POST">
                            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

                            <input type="hidden" value="<%= item.id %>" name="itemId">
                            <input type="hidden" value="/home" name="location">
                            <% if item.saveList  %>
                                <button type="submit" class="btn btn-warning">Remove from saved</button>
                            <% else %>
                                <button type="submit" class="btn btn-success">Save item</button>
                            <% end %>
                        </form>
                    </div>
                <% end %>
            </div>
            <br><br><br>
        </div>
        <hr>
        <div>
            <div class="row">
                <div class="col-md-9">
                    <h2> Collection </h2>
                </div>
                <div class="col-md-3">
                    <%= link_to "collection/all" do %>
                        <h4> See all + </h4>
                    <% end %>
                </div>
            </div>
            <br>
            <div>
                <%= link_to "collection/women" do %>
                    <div class="row">
                        <div style="height: 300px; background-color: white; width: 97%; text-align: center; padding: 100px">
                            <h4> <b> Women </b> </h4>
                            <h5> <%= @womenSize %> ITEMS </h5>
                        </div>
                    </div>
                <% end %>
                <br>
                <div class="row">
                    <div class="col-md-6">
                        <%= link_to "collection/men" do %>
                            <div class="row">
                                <div style="height: 150px; background-color: white; text-align: center; padding: 50px"">
                                    <h4> <b> Men </b> </h4>
                                    <h5> <%= @womenSize %> ITEMS </h5>
                                </div>
                            </div>
                        <% end %>
                        <br>
                        <%= link_to "collection/kids" do %>
                            <div class="row">
                                <div style="height: 150px; background-color: white; text-align: center; padding: 50px"">
                                    <h4> <b> Kids </b> </h4>
                                    <h5> <%= @womenSize %> ITEMS </h5>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <%= link_to "collection/new" do %>
                        <div class="col-md-6">
                            <div style="height: 320px; background-color: white; text-align: center; padding: 100px"">
                                <h4> <b> New-Ins </b> </h4>
                                <h5> <%= @womenSize %> ITEMS </h5>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>

        <div class="row">
            <br><br>
            <h1> Newsletter </h1>
            <h4> sign up with our newsletter... </h4>
            <br>
            
            <div class="input-group">
            <form action="/email" method="POST">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

                <input type="email" class="form-control" aria-describedby="basic-addon2" name="email" placeholder="example@example.com">
                
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
            </div>
            <br><br><br>
        </div>
    
    </div>
</div>
