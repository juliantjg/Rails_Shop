<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <center> <h3> Home </h3> </center>
        <div class="row" style="height: 450px; background-image: linear-gradient(to top, grey , silver);">
            
            <%= @randomItem.name %>
            <br>
            <%= @randomItem.description %>
            <br>
            <%= @randomItem.price %>  
            <br>
            
            <form action="/save" method="POST">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <input type="hidden" value="<%= @randomItem.id %>" name="itemId">
                <input type="hidden" value="/home" name="location">
                <button type="submit"><span class="glyphicon glyphicon-plus-sign" style="font-size: 35px;" aria-hidden="true"></span></button>
            </form>
        </div>
        <div>
            <br>
            <div class="row">
                <div class="col-md-9">
                    <h2> Popular </h2>
                </div>
                <div class="col-md-3">
                    <%= link_to "collection/all" do %>
                        <h4> See all + </h4>
                    <% end %>
                </div>
            </div>
            <br>
            <div class="row">
                <% @popularItems.each do |item| %>
                    <a href="item/<%= item.id %>">
                        <div class="col-md-4">
                            <div style="height: 200px; background-color: silver;">
                                <h4> <%= item.name %>  </h4>
                                <form action="/save" method="POST">
                                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

                                    <input type="hidden" value="<%= item.id %>" name="itemId">
                                    <input type="hidden" value="/home" name="location">
                                    <% if item.saveList  %>
                                        <button type="submit"><span class="glyphicon glyphicon-minus" style="font-size: 35px;" aria-hidden="true"></span></button>
                                    <% else %>
                                        <button type="submit"><span class="glyphicon glyphicon-plus-sign" style="font-size: 35px;" aria-hidden="true"></span></button>
                                    <% end %>
                                </form>
                            </div>
                        </div>
                    </a>

                <% end %>
            </div>
            <br><br><br>
        </div>
        <hr>
        <div>
            <div class="row">
                <div class="col-md-9">
                    <h2> Collection </h2>
                </div>
                <div class="col-md-3">
                    <%= link_to "collection/all" do %>
                        <h4> See all + </h4>
                    <% end %>
                </div>
            </div>
            <br><br>
            <div>
                <%= link_to "collection/women" do %>
                    <div class="row">
                        <div style="height: 300px; background-color: white; width: 97%;">
                            <h4> <b> Women </b> </h4>
                            <h5> <%= @womenSize %> ITEMS </h5>
                        </div>
                    </div>
                <% end %>
                <br>
                <div class="row">
                    <div class="col-md-6">
                        <%= link_to "collection/men" do %>
                            <div class="row">
                                <div style="height: 150px; background-color: white;">
                                    <h4> <b> Men </b> </h4>
                                    <h5> <%= @womenSize %> ITEMS </h5>
                                </div>
                            </div>
                        <% end %>
                        <br>
                        <%= link_to "collection/kids" do %>
                            <div class="row">
                                <div style="height: 150px; background-color: white;">
                                    <h4> <b> Kids </b> </h4>
                                    <h5> <%= @womenSize %> ITEMS </h5>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <%= link_to "collection/new" do %>
                        <div class="col-md-6">
                            <div style="height: 330px; background-color: white;">
                                <h4> <b> New-Ins </b> </h4>
                                <h5> <%= @womenSize %> ITEMS </h5>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
        
        <div>
            <br><br>
            <h1> Newsletter </h1>
            <h4> sign up with our newsletter... </h4>
            <br>

            <div class="input-group">
                <input type="text" class="form-control" placeholder="Recipient's username" aria-describedby="basic-addon2">
                <span class="input-group-addon" id="basic-addon2">@example.com</span>
                
            </div>
            <input class="btn btn-default" type="submit" value="Submit">
            <br><br><br>
        </div>
        <br><br>
    </div>
</div>
