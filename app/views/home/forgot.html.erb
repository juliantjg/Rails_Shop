<div class= "container">
 
    <% provide(:title, 'Forgot Password') %>
    <center> <h3>Forgotten Password</h3> </center>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h3> Please enter valid email to reset password</h3>
            <br>
            <% flash.each do |type, msg| %>
                <center>
                <div class="alert alert-success" role="alert">
                        <h3 style="color: blue;"> <%= msg %> </h3>
                </div>
                </center>
            <% end %>   
            <br>
            <form action="/emailpassword" method="POST">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <input type="email" class="form-control" aria-describedby="basic-addon2" name="email" placeholder="example@example.com">
                
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
            <br>
            <center> <p>Changed your mind? <%= link_to "Login", login_path %></p> </center>
        </div>
        <div class="col-md-3">

        </div>
    </div>
</div>